<body>
    <h1 id="gros_titre">Les evenements</h1>
    <div id="div1">
        <p id="p1">Phase de bouillonement</p>
    </div>
    <div id="div2">
        <p id="p2">Phase de capture utilisée</p>
    </div>

</body>
<script>
    var div1 = document.getElementById('div1') ;
    var p1 = document.getElementById("p1") ;

    var div2 = document.getElementById('div2') ;
    var p2 = document.getElementById("p2") ;

    // Phase de bouillonement pour p1 et div1
    div1.addEventListener('click', MessageDiv1);
    p1.addEventListener('click', MessageP1);


    function MessageDiv1 () {
        alert ("Evenement du div1") ;
    }

    function MessageP1 () {
        alert ("Evenement du p1") ;
    }

    // Phase de capture utilisé pour div2 et p2
    div2.addEventListener('click', MessageDiv2,true);
    p2.addEventListener('click', MessageP2,true);

    function MessageDiv2 () {
        alert ("Evenement du div2") ;
    }

    function MessageP2 () {
        alert ("Evenement du p2") ;
    }





</script>
